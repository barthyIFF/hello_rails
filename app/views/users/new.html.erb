<%= form_for User.new do |form| %>
    <br/>    
    <div class="row">        
        <div class="col-3">            
            <div class="form-group">
                <%= form.label :email %>
                <%= form.text_field :email, class:"form-control" %>
            </div>
        </div>
    </div>

    <div class="row">        
        <div class="col-3">            
            <div class="form-group">
                <%= form.label :password %>
                <%= form.text_field :password, class:"form-control" %>
            </div>
        </div>
    </div>
    <br>
    <%= form.submit "Criar", class:"btn btn-primary" %>
<% end %>